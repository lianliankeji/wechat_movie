.container {
  background-color: #fff;
}
.title{
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  padding-top: 12rpx;
  margin-bottom: 15rpx;
  border-top: 1px #ddd solid;
}
.card-list{
  /* text-align: center */
  padding: 0 20rpx;
}
.card-list .img{
  width: 320rpx;
  height: 220rpx;
  box-sizing: border-box;
  margin: 13rpx 16rpx;
}

.active{
  width: 324rpx;
  height: 224rpx;
  border: 3px solid #DDBF90;
  border-radius: 4px;
}

.footer{
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 0;
  padding: 18rpx 20rpx;
  box-shadow: 0 -2px 4px 0 rgba(0,0,0,0.11);
}

.money{
  font-size: 40rpx;
  color: #000000;
  margin-right: 36rpx;
}

.youhui{
  font-size: 28rpx;
  color: #D02121;
}

.btn{
  background: #DDBF90;
  border-radius: 4px;
  width: 160rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
}