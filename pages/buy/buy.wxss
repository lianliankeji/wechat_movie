/* pages/buy/buy.wxss */

.container {
  background-color: #fff;
}

.buybg {
  position: absolute;
  width: 100%;
  height: 200rpx;
}

.movie {
  position: absolute;
  top: 100rpx;
  left: 40rpx;
  width: 350rpx;
  height: 280rpx;
}

.name {
  z-index: 99;
  position: absolute;
  left: 430rpx;
  top: 120rpx;
  color: #fff;
}

.actor {
  z-index: 99;
  position: absolute;
  left: 430rpx;
  top: 220rpx;
  color: #666;
}

.area {
  position: absolute;
  top: 400rpx;
  width: 90%;
  padding: 30rpx;
  text-align: center;
  color: #666;
}

.line {
  width: 86%;
  height: 0;
  border-bottom: #ddbf90 1px dashed;
  position: absolute;
  top: 540rpx;
  padding: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.buy {
  /* z-index: 1000; */
  position: absolute;
  top: 20rpx;
  left: 36rpx; 
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.button {
  /* top: 960rpx; */
  margin-top: 20rpx;
  text-align: center;
  line-height: 80rpx;
  width: 100%;
  background-color: #DDBF90;
  color: #FFFFFF;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin: 20rpx;
}

.price {
  color: #dc0606;

}

.inp {
  margin-left: 20rpx;
}

.sendcode {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.title {
  width: 150rpx;
  margin-right: 30rpx;
}

.send {
  color: #DDBF90;
  border: 1px #DDBF90 solid;
  width: 120rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: #FFFFFF;
  margin-left: 20rpx;
}

